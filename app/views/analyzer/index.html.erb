<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4">AWS Sales Analyzer</h1>

  <%= form_with(url: analyzer_filter_data_path, method: :post, local: true, data: { turbo_frame: 'filtered-data' }) do |form| %>
    <%= form.file_field :attachment, class: "mb-2" %>
    <%= form.submit "Analyze", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  <% end %>

  <div id="filtered-data" class="mt-4">
    <%= turbo_frame_tag 'filtered-data' do %>
      <%= render partial: 'filtered_data' %>
    <% end %>
  </div>
</div>
