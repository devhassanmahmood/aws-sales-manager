<!-- _filtered_data.html.erb -->
<table class="border border-collapse">
  <thead>
    <tr>
      <% @sales_header.each do |header| %>
        <th class="border px-4 py-2"><%= header %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @filtered_data.each do |record| %>
      <tr>
        <% @sales_header.each do |header| %>
          <td class="border px-4 py-2"><%= record[header] %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
